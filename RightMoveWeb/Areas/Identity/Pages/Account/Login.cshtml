@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


<body class="app flex-row align-items-center" >
    <div class="container" style="margin-top:100px;margin-right:50px;padding-left: 0px;">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card-group">
                    <div class="card p-4">
                        <div class="card-body">
                            <form id="account" method="post">
                                <h1>Login</h1>
                                <p class="text-muted">Sign In to your account</p>
                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="icon-user"></i>
                                        </span>
                                    </div>
                                    <input asp-for="Input.Email" class="form-control" type="text" placeholder="Email" />
                                </div>
                                <div class="input-group mb-4">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="icon-lock"></i>
                                        </span>
                                    </div>
                                    <input asp-for="Input.Password" class="form-control" type="password" placeholder="Password" />
                                </div>
                                <div class="row">
                                    <div class="col-6 text-left">
                                        <div class="checkbox">
                                            <label asp-for="Input.RememberMe">
                                                <input asp-for="Input.RememberMe" />
                                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <button class="btn btn-primary px-4" type="submit">Login</button>
                                    </div>
                                    <div class="col-6 text-right">
                                        <a class="btn btn-link px-0" id="forgot-password" asp-page="./ForgotPassword">Forgot password?</a>
                                    </div>
                                </div>
                            </form>
                        </div>

                    </div>
                    <div class="card text-white bg-primary py-5 d-md-down-none" style="width:44%">
                        <div class="card-body text-center">
                            <div>
                                <h2>Sign up</h2>
                                <p class="clearfix">&nbsp;</p>
                                <a asp-page="./Register" class="btn btn-primary active mt-3" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>






@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
