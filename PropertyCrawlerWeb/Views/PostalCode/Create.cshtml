@model PostalCodeModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        <strong>Create</strong> new Postal Code
    </div>
    <div class="card-body">
        <form action="Create" method="post">
            <div class="form-group">
                <label asp-for="Code" class="control-label">Code</label>
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OpCode" class="control-label">Op Code</label>
                <input asp-for="OpCode" class="form-control" />
                <span asp-validation-for="OpCode" class="text-danger"></span>
            </div>
        </form>
    </div>
    <div class="card-footer">
        <div class="row">
            <div class="col">
                <button class="btn btn-outline-success" type="submit" value="Create" style="padding:6px 40px;">
                     Create
                </button>
            </div>
            <div class="col text-right">
                <a asp-action="Index" class="btn btn-outline-info" style="padding:6px 40px;">
                    Back to List
                </a>
            </div>
        </div>
    </div>
</div>