@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card border-danger mb-5" style="max-width: 70rem;margin-top:30px;">
    <div class="card-header bg-danger text-center"><h4>Are you sure to perform this operation ?</h4> </div>
    <div class="card-body text-danger">
        <form asp-action="Delete" method="post">
            <div class="row">
                <div class="col" style="margin-left:30px;">
                    <button type="submit" value="Delete" class="btn btn-danger" style="padding:6px 40px;">Delete</button>
                </div>
                <div class="col text-right" style="margin-right:50px;">
                    <a asp-action="Index" class="btn btn-link">Go Back</a>
                </div>
            </div>
        </form>
    </div>
</div>



