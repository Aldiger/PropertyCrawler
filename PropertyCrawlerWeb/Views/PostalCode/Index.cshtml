@model PagedList<PostalCodeModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="animated fadeIn">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col">Postal Codes</div>
                        <div class="col text-right"> <a asp-action="Create">Create New</a></div>
                    </div>
                </div>
                <div class="card-body">
                    <table class="table table-responsive-sm">
                        <thead>
                            <tr>
                                <th>Code </th>
                                <th> Out Code</th>
                                <th> Date Added</th>
                                <th> Date Modified</th>
                                <th>Properties</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Code)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.OpCode)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DateAdded)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DateModified)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Properties)
                                    </td>
                                    <td>
                                        <a asp-action="Update" asp-route-id="@item.Id">Edit</a> |
                                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="col-lg-12">
    <div class="text-center">
        <cs-pager cs-paging-pagesize="@Model.PageSize"
                  cs-paging-pagenumber="@Model.CurrentPage"
                  cs-paging-totalitems="@Model.TotalCount"
                  cs-pagenumber-param="pageNumber"
                  asp-controller="PostalCode"
                  asp-action="Index"></cs-pager>
    </div>
</div>
