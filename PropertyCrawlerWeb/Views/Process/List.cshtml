@model PagedList<ProcessVM>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="animated fadeIn">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col">Processes</div>
                        <div class="col text-right"> <a asp-action="Configure">Configure New</a></div>
                    </div>
                </div>
                <div class="card-body">
                    <table class="table table-responsive-sm">
                        <thead>
                            <tr>
                                <th>Type </th>
                                <th>Date Created</th>
                                <th> Date Modified</th>
                                <th>  Status</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Type)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DateAdded)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DateModified)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Status)
                                    </td>
                                    
                                    <td>
                                        <a asp-action="Execute" asp-route-postalCodes="@item.PostalCode" asp-route-propertyType="@item.Type" asp-route-processType="@item"
                                           asp-route-isScheduled="false"><i class="fa fa-redo"></i>Execute Now</a> |`
                                        <a href="">Details</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="col-lg-12">
    <div class="text-center">
        <cs-pager cs-paging-pagesize="@Model.PageSize"
                  cs-paging-pagenumber="@Model.CurrentPage"
                  cs-paging-totalitems="@Model.TotalCount"
                  cs-pagenumber-param="pageNumber"
                  asp-controller="Process"
                  asp-action="List"></cs-pager>
    </div>
</div>
